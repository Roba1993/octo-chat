<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.robertschuette</groupId>
    <artifactId>octa-chat</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <properties>
        <!-- The final name for the JAR that you can find in target directory-->
        <jar.final.name>octa-chat</jar.final.name>
        <!--  the default class that has the public static void main(String[]) method -->
        <main.class>de.robertschuette.octachat.OctaChat</main.class>
    </properties>

    <!--<repositories>
        <repository>
            <id>in-project</id>
            <name>In Project Repo</name>
            <url>file://${project.basedir}/src/lib/jxbrowser-5/lib</url>
        </repository>
    </repositories>-->

    <dependencies>
        <!-- .xml reader & writer -->
        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom2</artifactId>
            <version>2.0.6</version>
        </dependency>

        <!-- access to apple os x functions -->
        <dependency>
            <groupId>com.apple</groupId>
            <artifactId>AppleJavaExtensions</artifactId>
            <version>1.4</version>
        </dependency>

        <!-- os x look and feel -->
        <dependency>
            <groupId>com.aquafx-project</groupId>
            <artifactId>aquafx</artifactId>
            <version>0.2</version>
        </dependency>

        <!-- irc chat api -->
        <dependency>
            <groupId>org.pircbotx</groupId>
            <artifactId>pircbotx</artifactId>
            <version>2.0.1</version>
        </dependency>

        <!-- JxBrowser main jar -->
        <!--<dependency>
            <groupId>jxbrowser-5.4.2</groupId>
            <artifactId>jxbrowser-5.4.2</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <systemPath>${basedir}/src/lib/jxbrowser-5/lib/jxbrowser-5.4.2.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>jxbrowser-mac-5.4.2</groupId>
            <artifactId>jxbrowser-mac-5.4.2</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <systemPath>${basedir}/src/lib/jxbrowser-5/lib/jxbrowser-mac-5.4.2.jar</systemPath>
        </dependency>-->

        <!--<dependency>
            <groupId>license-development</groupId>
            <artifactId>license-development</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <systemPath>license-development.jar</systemPath>
        </dependency>-->

        <dependency>
            <groupId>teamdev</groupId>
            <artifactId>jxbrowser</artifactId>
            <version>5.4.2</version>
        </dependency>

        <dependency>
            <groupId>teamdev</groupId>
            <artifactId>jxbrowser-mac</artifactId>
            <version>5.4.2</version>
        </dependency>

        <dependency>
            <groupId>teamdev</groupId>
            <artifactId>jxbrowser-license</artifactId>
            <version>5.4.2</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>${jar.final.name}</finalName>
        <!-- sass / scss compiler -->
        <plugins>
            <plugin>
                <groupId>com.github.warmuuh</groupId>
                <artifactId>libsass-maven-plugin</artifactId>
                <version>0.1.5-libsass_3.2.4</version>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!--<imgPath>../img</imgPath>-->
                    <inputPath>${basedir}/src/main/resources/chat/sass</inputPath>
                    <outputPath>${basedir}/src/main/resources/chat/css</outputPath>
                    <includePath>${basedir}/src/main/resources/chat/sass/plugins/</includePath>
                    <outputStyle>compressed</outputStyle>
                    <generateSourceMap>false</generateSourceMap>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>${main.class}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>


            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jxbrowser</id>
                        <phase>clean</phase>
                        <configuration>
                            <file>${basedir}/src/lib/jxbrowser-5/lib/jxbrowser-5.4.2.jar</file>
                            <repositoryLayout>default</repositoryLayout>
                            <groupId>teamdev</groupId>
                            <artifactId>jxbrowser</artifactId>
                            <version>5.4.2</version>
                            <packaging>jar</packaging>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jxbrowser-mac</id>
                        <phase>clean</phase>
                        <configuration>
                            <file>${basedir}/src/lib/jxbrowser-5/lib/jxbrowser-mac-5.4.2.jar</file>
                            <repositoryLayout>default</repositoryLayout>
                            <groupId>teamdev</groupId>
                            <artifactId>jxbrowser-mac</artifactId>
                            <version>5.4.2</version>
                            <packaging>jar</packaging>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jxbrowser-license</id>
                        <phase>clean</phase>
                        <configuration>
                            <file>${basedir}/src/lib/jxbrowser-5/lib/license-development.jar</file>
                            <repositoryLayout>default</repositoryLayout>
                            <groupId>teamdev</groupId>
                            <artifactId>jxbrowser-license</artifactId>
                            <version>5.4.2</version>
                            <packaging>jar</packaging>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>

    <profiles>
        <profile>
            <id>run</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.3.2</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <mainClass>${main.class}</mainClass>
                                    <arguments>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>